	"latex-workshop.view.pdf.trim": 2,
    "latex-workshop.latex.clean.fileTypes": [
        "**/src/**/*.aux",
        "**/src/**/*.bbl",
        "**/src/**/*.blg",
        "**/src/**/*.idx",
        "**/src/**/*.ind",
        "**/src/**/*.lof",
        "**/src/**/*.lot",
        "**/src/**/*.out",
        "**/src/**/*.toc",
        "**/src/**/*.acn",
        "**/src/**/*.acr",
        "**/src/**/*.alg",
        "**/src/**/*.glg",
        "**/src/**/*.glo",
        "**/src/**/*.gls",
        "**/src/**/*.fls",
        "**/src/**/*.log",
        "**/src/**/*.fdb_latexmk",
        "**/src/**/*.snm",
        "**/src/**/*.synctex(busy)",
        "**/src/**/*.synctex.gz(busy)",
        "**/src/**/*.nav"
    ],
    "latex-workshop.latex.search.rootFiles.include": [
        "**/*.tex",
        "**/*.rnw",
        "**/*.Rnw"
    ],
    "latex-workshop.bibtex.maxFileSize": 7,
}
